<h1 class="text-center mt-4">Article Listing page</h1>
<div class="container">
<% @article.each do |article|%>
    <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
        <div class="card text-center">
        <div class="card-header font-italic">
            by nishant
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(article.discription, length: 50)%></p>
           <%= link_to "View", article_path(article), class: "btn btn-outline-success"  %> 
           <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info"%>
           <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "are u sure?"} %>
        </div>
        <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at)  %> Ago,
            edited <%= time_ago_in_words(article.updated_at) %> Ago</small>
        </div>
        </div>
    </div>
    </div>
<%end%>
</div>   
